.container
    .row
        .page-header
            h1= title
.navbar.navbar-default.navbar-fixed-bottom
    .container
        .navbar-header
            a.navbar-brand('/') 电影爱好者
        if user
          p.navbar-text.navbar-right
            span 欢迎您，#{user.name}
            span &nbsp;|&nbsp;
            a(href="/logout") 登出
        else
          p.navbar-text.navbar-right
              a.navbar-link(href="#", data-toggle="modal", data-target="#signupModal") 注册
              span &nbsp;|&nbsp;
              a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") 登录
#signupModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="POST", action="/signup")
                .modal-header 注册
                .modal-body
                    .form-group
                        label(for="signupName") 用户名
                        input#signupName.form-control(name="name", type="text")
                    .form-
                        label(for="signupPwd") 密码
                        input#signupPwd.form-control(name="password", type="password")
                .modal-footer
                    button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                    button.btn.btn-success(type="submit") 注册
#signinModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="POST", action="/signin")
                .modal-header 登录
                .modal-body
                    .form-group
                        label(for="signinName") 用户名
                        input#signinName.form-control(name="name", type="text")
                    .form-group
                        label(for="signinPwd") 密码
                        input#signinPwd.form-control(name="password", type="password")
                .modal-footer
                    button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                    button.btn.btn-success(type="submit") 登录


