extends ../layout

block content
  .container(style="padding-bottom: 100px;")
    .row
        .panel.panel-default
          .panel-heading
            h3.panel-title #{keywords}
          .panel-body
            if movies && movies.length > 0
              each item in movies
                .col-md-2
                  .thumbnail
                    a(href="/movie/#{item._id}")
                      if item.poster.indexOf('http') > -1
                        img(src="#{item.poster}", alt="#{item.title}")
                      else
                        img(src="/upload/#{item.poster}", alt="#{item.title}")
                    .caption.text-center
                      h4 #{item.title}
                      p: a.btn.btn-primary.btn-sm(href="/movie/#{item._id}", role="button") 观看预告片
        ul.pagination
          - for (var i = 0; i < totalPages; i++) {
          - if (currentPage == (i + 1)) {
              li.active
                span #{currentPage}
          - }
          - else {
              li
                a(href="results?#{query}&p=#{i}") #{i + 1}
          - }
          - }